@using OdeToFood1.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
                <a class="btn btn-primary"
                    asp-page="./Detail" asp-route-restaurantId="@Model.Id">
                    <i class="glpyhicon glyphicon-zoom-in">Details</i>
                </a>
                <a class="btn btn-info"
                    asp-page="./Edit" asp-route-restaurantId="@Model.Id">
                    <i class="glpyhicon glyphicon-edit">Edit</i>
                </a>
                <a class="btn btn-danger"
                    asp-page="./Delete" asp-route-restaurantId="@Model.Id">
                    <i class="glpyhicon glyphicon-trash">Delete</i>
                </a>
    </div>
</div>
